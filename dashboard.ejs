<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        h1 {
            color: #333;
            text-align: center;
        }
        p {
            text-align: center;
        }
        a {
            color: #007bff;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .exam-name-input {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .exam-name-input input[type="text"] {
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        .exam-name-input button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 3px;
            cursor: pointer;
        }
        .exam-name-input button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <%- include('header.ejs') %>
    <h1>Welcome to the Dashboard, <%= username %></h1>
    <div class="exam-name-input">
        <input type="text" id="examName" name = "selectedExamName" placeholder="Enter Exam Name">
        <button onclick="takeExam()">Take Exam</button>
    </div>
    <p><a href="/logout">Logout</a></p>
    <%- include('footer.ejs') %>

    <script>
        function takeExam() {
            const examName = document.getElementById('examName').value.trim();
            if (examName !== '') {
                window.location.href = '/take_exam?examName=' + encodeURIComponent(examName);
            } else {
                alert('Please enter the exam name.');
            }
        }
    </script>
</body>
</html>

